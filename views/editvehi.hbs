
  
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">


<div class="container">

    <div class="row">

        <h2>Update Vehicle</h2>

        <div class="col-md-2"></div>

        <div class="col-md-8">


           {{#each vehidata}}

            <form class="form-horizontal" method="post" action="/updatevehicle/{{this.id}}">

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Vehicle ID</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputvehiid" placeholder="Vehicle ID" name="id" value="{{this.id}}">
                    </div>
                </div>

                        

                <div class="form-group">
                    <label for="inputfirstname" class="col-sm-2 control-label">Model</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputmodel" placeholder="Vehicle Model" name="model" value="{{this.model}}">
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputfirstname" class="col-sm-2 control-label">Model Year</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputmodel" placeholder="Model Year" name="model_year" value="{{this.model_year}}">
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputfirstname" class="col-sm-2 control-label">Mileage</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputmileage" placeholder="Mileage" name="mileage" value="{{this.mileage}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Brand</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputbrand" placeholder="Brand" name="brand" value="{{this.brand}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputname" class="col-sm-2 control-label">Fuel Type</label>
                    <div class="col-sm-10">
                          <select id="inputfuel" name="fuel_type" class="form-control" required>

                            <option value="Diesel">Diesel</option>
                            <option value="Petrol">Petrol</option>
                            <option value="Electric">Electric</option>
                        </select>
                    </div>
                </div>




                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Condition</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputcondition" placeholder="Condition" name="vehi_condition" value="{{this.vehi_condition}}">
                    </div>
                </div>                

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Engine Capacity</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputcapacity" placeholder="Engine Capacity" name="engine_capacity" value="{{this.engine_capacity}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Color</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputcolor" placeholder="Color" name="color" value="{{this.color}}">
                    </div>
                </div>                

                 <div class="form-group">
                    <label for="inputname" class="col-sm-2 control-label">Availability</label>
                    <div class="col-sm-10">
                          <select id="inputname" name="availability" class="form-control" required>

                            <option value="Available">Available</option>
                            <option value="Sold">Sold</option>

                        </select>
                    </div>
                </div>


                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Price</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputprice" placeholder="Price" name="price" value="{{this.price}}">
                    </div>
                </div> 

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputdescription" placeholder="Description" name="description" value="{{this.description}}">
                    </div>
                </div> 

                <div class="form-group">
                       <div class="col-sm-offset-2 col-sm-10">

                           <button type = "submit" class="btn btn-success" id="addvehiclebtn"> Update Vehicle</button>

                       </div> 

                </div>


            </form>

            {{/each}}


        </div>

        <div class="col-md-2"></div>

    </div>

</div>


