<div class="container">

    <div class="row">

       

        <div class="col-md-2"></div>

        <div class="col-md-8">

            

            <form class="form-horizontal" method="Post" action="/addselvehicle" enctype="multipart/form-data">

            <h4>
                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Brand</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputvehiid" placeholder="Brand" name="Brand">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Model </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputvehiid" placeholder="Model" name="Model">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputfirstname" class="col-sm-4 control-label">Model Year</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputmodel" placeholder="Model Year" name="ModelYear">
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputfirstname" class="col-sm-2 control-label">ContactNo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputmileage" placeholder="ContactNo" name="ContactNo">
                    </div>
                </div>

                <div class="form-group">
                    <label for="input" class="col-sm-4 control-label">EngineCapacity</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputbrand" placeholder="EngineCapacity" name="EngineCapacity">
                    </div>
                </div>

                 <div class="form-group">
                    <label for="inputname" class="col-sm-4 control-label">Availability</label>
                    <div class="col-sm-10">
                          <select id="inputname" name="Availability" class="form-control" >

                            <option value="Available">Available</option>
                            <option value="Sold">Sold</option>

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Price </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputcondition" placeholder="Price" name="Price">
                    </div>
                </div>                

                <div class="form-group">
                    <label for="input" class="col-sm-2 control-label">Description </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputcapacity" placeholder="Description" name="Description">
                    </div>
                </div>

             

                  <div class="form-group">
                            <label for="input" class="col-md-4 control-label">Vehicle Image</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="file" name="vehicle_image" accept=""/>
                            </div>
                        </div>   


                <div class="form-group">
                       <div class="col-sm-offset-2 col-sm-10">

                           <button type = "submit" class="btn btn-success" id="addvehiclebtn"> Add Vehicle</button>

                       </div> 

                </div>

</h4>
